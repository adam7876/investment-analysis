{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --upgrade pip setuptools wheel && pip install -r requirements-minimal.txt"
  },
  "deploy": {
    "startCommand": "python3 simple_app_minimal.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "version": "2.0.0"
} 